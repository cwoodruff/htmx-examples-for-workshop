@model IFormFile

<form hx-encoding='multipart/form-data' hx-post='/FileUpload/index?handler=upload2'
      hx-on:htmx:xhr:progress="htmx.find('#progress').setAttribute('value', event.detail.loaded / event.detail.total * 100)">

    <input name="UploadedFile2" asp-for="@Model">

    <button class="btn btn-primary">
        Upload
    </button>
    <progress id="progress" value='0' max='100'></progress>
</form>