@model IFormFile

<form hx-encoding='multipart/form-data' hx-post='@Url.Page("Index", "Upload2")'
      _ ="on htmx:xhr:progress(loaded, total) set #progress's value to (loaded/total)*100">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="@Model" class="form-label">Hyperscript Upload</label>
        <input name="UploadedFile" class="form-control" type="file">
    </div>

    <button class="btn btn-primary">
        Upload
    </button>
    <progress id="progress" value='0' max='100' class="mt-2"></progress>
    @if (Model != null)
    {
        <div class="alert alert-success mt-2">
            File uploaded: @Model.FileName
        </div>
    }
</form>