@page
@model htmx_examples.Pages.LazyLoading.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Lazy Loading</h4>
            </div>
            <div class="card-body">
                <p class="mb-4">
                    This page demonstrates how HTMX can be used for <strong>Lazy Loading</strong>. 
                    The dashboard components below are loaded asynchronously after the initial page load, 
                    simulating heavy background processes.
                </p>

                <div class="row">
                    <div class="col-md-7">
                        <!-- Sales Chart Widget -->
                        <div hx-get="/LazyLoading/Index?handler=SalesChart" 
                             hx-trigger="load">
                            <div class="text-center p-5 border rounded bg-light">
                                <div class="spinner-border text-primary mb-2" role="status"></div>
                                <p>Loading Sales Data...</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <!-- Recent Activity Widget -->
                        <div hx-get="/LazyLoading/Index?handler=RecentActivity" 
                             hx-trigger="load">
                            <div class="text-center p-5 border rounded bg-light">
                                <div class="spinner-border text-secondary mb-2" role="status"></div>
                                <p>Checking for updates...</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->