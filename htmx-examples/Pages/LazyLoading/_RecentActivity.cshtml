<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Recent Activity</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">New order #12345</h6>
                <small>3 mins ago</small>
            </div>
            <p class="mb-1 small">Customer: Alice Johnson</p>
        </li>
        <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">Inventory Alert</h6>
                <small>45 mins ago</small>
            </div>
            <p class="mb-1 small">Product "Blue Widget" is low on stock.</p>
        </li>
        <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">Payment Received</h6>
                <small>1 hour ago</small>
            </div>
            <p class="mb-1 small">Order #12340 processed successfully.</p>
        </li>
    </ul>
    <div class="card-footer text-muted small">
        Last updated @DateTime.Now.ToLongTimeString()
    </div>
</div>